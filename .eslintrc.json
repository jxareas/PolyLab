{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        // @custom
        "./scripts/eslint/angular.js",
        "./scripts/eslint/cypress.js",
        "./scripts/eslint/naming-conventions.js",
        "./scripts/eslint/non-restricted-syntax.js",
        "./scripts/eslint/typescript.js"
      ],
      "rules": {
        "@typescript-eslint/quotes": "off",
        "@angular-eslint/prefer-on-push-component-change-detection": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "unicorn/prefer-logical-operator-over-ternary": "off",
        "@angular-eslint/template/no-autofocus": "off",
        "@angular-eslint/template/label-has-associated-control": "off",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "jx",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "jx",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": [
        "plugin:@angular-eslint/template/recommended",
        "plugin:@angular-eslint/template/accessibility"
      ],
      "plugins": ["@typescript-eslint", "@angular-eslint", "unicorn"],
      "rules": {
        "@angular-eslint/template/elements-content": "off"
      }
    }
  ]
}
